@page "/sign-in"
@using Pacco.Web.Areas.Identity
@inject IdentityComponent Component;


<div class="columns">
    <div class="column is-4"></div>
    <div class="column is-4">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">Sign in</p>
            </header>
            <div class="card-content">
                <div class="content">
                    <div class="field">
                        <label class="label">Email</label>
                        <div class="control">
                            <input @bind="@Email" class="input is-medium" type="email" placeholder="Email"/>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Password</label>
                        <div class="control">
                            <input @bind="@Password" class="input is-medium" type="password" placeholder="Password"/>
                        </div>
                    </div>
                    <br/>
                    <a href="/"><button type="button" class="button is-primary is-medium is-fullwidth">Sign in</button></a>
                </div>
            </div>
        </div>
    </div>
    <div class="column is-4"></div>
</div>

@functions
{  
    public string Email { get; set; }
    public string Password { get; set; }
}